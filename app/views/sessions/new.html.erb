<h1 align = 'center'>Welcome to MessageMe, a chat app!</h1>
<h2 class="ui center aligned medium icon header">
  <i class="blue power off icon"></i>
  Login
</h2>


  <div class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid">
      <div class="column">
        <%= form_for(:session, html: { class: 'ui form', role: 'form'}, url: login_path) do |f| %>
          <div class="ui form">
            <div class="field">
              <%= f.label :email %>
              <div class="ui left icon input">
                <%= f.text_field :email, placeholder: 'Email' %>
                <i class="user icon"></i>
              </div>
            </div>
            <div class="field">
              <%= f.label :password %>
              <div class="ui left icon input">
                <%= f.password_field :password, placeholder: 'Password' %>
                <i class="lock icon"></i>
              </div>
            </div>
            <%= f.button 'Login', class: 'ui blue submit button' %>
            
          </div>
        <% end %>
      </div>
      <div class="middle aligned column">
        <div class="ui big button">
          <i class="blue signup icon"></i>
          <%= link_to 'Sign Up', sign_up_path, class: "signup icon" %>
        </div>
      </div>
    </div>
    <div class="ui vertical divider">
      Or
    </div>
  </div>
